extends ../layouts/main.pug

block content
  .container
    form.form-signin
      h1.h3.mb-3.font-weight-normal Please sign in
      label.sr-only(for="inputEmail") Email address
      input.form-control#inputEmail(type="email" placeholder = "Email address")
      label.sr-only(for="inputPassword") Password
      input.form-control#inputPassword(type="password" placeholder = "Password" required)
      button.btn.btn-lg.btn-primary.btn-block(type="submit") Sign in
      p.mt-5.mb-3.text-muted &copy; 2020

